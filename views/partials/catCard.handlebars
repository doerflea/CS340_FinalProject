<div class="cat-card" id = "{{this.id}}" data-cat-num = "{{catNUM}}" data-feed-stat = "{{this.feed_stat}}" data-groom-stat= "{{this.groom_stat}}" data-play-stat= "{{this.play_stat}}" data-is-adult= "{{this.age}}" data-color = "{{this.color_id}}">
  <div class="cat-name-holder">
    <h2 class="cat-name">{{this.cat_name}}</h2>
  </div>
  <div class="cat-image-holder">
    <img class="catImg" src= "../{{this.img_path}}" alt="Cat Image">
  </div>

  <div class="cat-stats-holder">
    <div class="groom-stat stat-holder">
      <img src="../images/brush.jpg" alt="Groom Icon" class="stat-icon">
      <p class="groom-stat-text">{{this.groom_stat}}/2</p>
    </div>

    <div class="feed-stat stat-holder">
      <img src="../images/bowl.jpg" alt="Feed Icon" class="stat-icon">
      <p class="feed-stat-text"> {{this.feed_stat}}/2</p>
    </div>

    <div class="play-stat stat-holder">
      <img src="../images/cat_toy.jpg" alt="Play Icon" class="stat-icon">
      <p class="play-stat-text"> {{this.play_stat}}/2</p>
    </div>
  </div>
</div>
